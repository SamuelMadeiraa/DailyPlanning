<%= form_with(model: @estudo, local: true) do |form| %>
  <% if @estudo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@estudo.errors.count, "error") %> proibiu este estudo de ser salvo:</h2>

      <ul>
        <% @estudo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :descricao %>
    <%= form.text_area :descricao %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
